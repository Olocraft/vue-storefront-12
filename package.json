{
  "name": "@sfui/monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/docs/*",
    "apps/preview/*",
    "packages/*",
    "packages/config/*"
  ],
  "scripts": {
    "postinstall": "concurrently \"yarn createMitosisIcons\" \"yarn createVueIcons\" \"yarn createReactIcons\" && yarn lint:fix:sfui",
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:fix:sfui": "turbo run lint:fix:sfui",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "npx rimraf ./**/node_modules && rm yarn.lock",
    "clean:total": "npx rimraf ./**/node_modules && rimraf ./**/.cache && rimraf ./**/.turbo && rm yarn.lock",
    "createMitosisIcons": "yarn node createIcons input=apps/mitosis/assets/ output=apps/mitosis/src/blocks/VsfIcons/",
    "createVueIcons": "yarn node createIcons framework=vue input=packages/sfui/assets/ output=packages/sfui/frameworks/vue/components/VsfIcons/",
    "createReactIcons": "yarn node createIcons framework=react input=packages/sfui/assets/ output=packages/sfui/frameworks/react/components/VsfIcons/",
    "hygen": "./node_modules/.bin/hygen",
    "component": "yarn hygen component"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@sfui/typescript-config": "*",
    "babel-cli": "^6.26.0",
    "babel-preset-node": "^5.1.1",
    "commitizen": "^4.2.5",
    "concurrently": "^7.4.0",
    "husky": "^7.0.4",
    "hygen": "^6.2.8",
    "nodemon": "^2.0.19",
    "prettier": "latest",
    "tailwindcss": "^3.1.8",
    "ts-node-dev": "^2.0.0",
    "turbo": "latest",
    "typescript": "^4.7.4"
  },
  "engines": {
    "npm": ">=8.19.1",
    "yarn": ">=1.22.19",
    "node": ">=16.0.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3"
  },
  "packageManager": "yarn@1.22.10",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog",
      "disableScopeLowerCase": true
    }
  }
}
