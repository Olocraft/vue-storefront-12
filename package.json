{
  "name": "@sfui/monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/docs/*",
    "apps/preview/*",
    "packages/*",
    "packages/config/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:nuxt": "we need only for nuxt script and for remix and for mitosis",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "npx rimraf ./**/node_modules && rm yarn.lock",
    "clean:total": "npx rimraf ./**/node_modules && rimraf ./**/.cache && rimraf ./**/.turbo && rm yarn.lock"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-node": "^5.1.1",
    "commitizen": "^4.2.5",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@sfui/typescript-config": "*",
    "husky": "^7.0.4",
    "prettier": "latest",
    "turbo": "latest",
    "typescript": "^4.7.4",
    "nodemon": "^2.0.19",
    "tailwindcss": "^3.1.8",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3"
  },
  "packageManager": "yarn@1.22.10",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog",
      "disableScopeLowerCase": true
    }
  }
}
